{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://optical-designer-setup-backend.onrender.com/api/simulate"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
